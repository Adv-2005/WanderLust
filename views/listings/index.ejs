<% layout("/layouts/boilerplate.ejs") %>

<body>
    <div id="filters" class="d-flex justify-content-center flex-wrap my-4">
        <div class="filter text-center mx-3">
            <i class="fa-solid fa-fire"></i>
            <p>Trending</p>
        </div>
        <div class="filter text-center mx-3">
            <i class="fa-solid fa-bed"></i>
            <p>Rooms</p>
        </div>
        <div class="filter text-center mx-3">
            <i class="fa-solid fa-mountain-city"></i>
            <p>Iconic cities</p>
        </div>
        <div class="filter text-center mx-3">
            <i class="fa-solid fa-mountain"></i>
            <p>Mountains</p>
        </div>
        <div class="filter text-center mx-3">
            <i class="fa-brands fa-fort-awesome"></i>
            <p>Castles</p>
        </div>
        <div class="filter text-center mx-3">
            <i class="fa-solid fa-person-swimming"></i>
            <p>Amazing Pools</p>
        </div>
        <div class="filter text-center mx-3">
            <i class="fa-solid fa-campground"></i>
            <p>Camping</p>
        </div>
        <div class="filter text-center mx-3">
            <i class="fa-solid fa-cow"></i>
            <p>Farms</p>
        </div>
        <div class="filter text-center mx-3">
            <i class="fa-solid fa-snowflake"></i>
            <p>Arctic</p>
        </div>
        <div class="tax-toggle form-check-reverse form-switch ms-5">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckChecked">
            <label class="form-check-label" for="switchCheckChecked">Display Total after Taxes</label>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% for (let listing of listings) { %>
        <div class="col">
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card listing-card h-100">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-text"><span class="pricewoTax">&#x20b9; <%= listing.price.toLocaleString("en-IN") %> /night</span> <i class="tax">&nbsp; 
              &#x20b9; 
              <%= (listing.price * 1.18).toLocaleString("en-IN", { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %> 
              /night (incl. GST)
           </i></p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>
</body>



