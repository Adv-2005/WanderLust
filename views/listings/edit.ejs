<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
    <h2>Edit <%=selectedListing.title%></h2>
    <form action="/listings/<%=selectedListing._id%>?_method=PUT" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%=selectedListing.title%>" class="form-control" required>
            <div class="valid-feedback">Looks Good</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="" cols="30" rows="5" class="form-control" required>" <%=selectedListing.description%> "</textarea>
            
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="text" name="listing[image][url]"  value="<%=selectedListing.image.url%>" class="form-control" required>
        </div>
        <div class="row">
        <div class="mb-3 col-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" value="<%=selectedListing.price%>" class="form-control" required>
            <div class="invalid-feedback">Please enter valid price</div>
          
        </div>
   
        <div class="mb-3 col-8">

            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" value="<%=selectedListing.country%>" class="form-control" required>
            <div class="invalid-feedback">Please enter valid price</div>
          
            
        </div>
    </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%=selectedListing.location%>" class="form-control" required>
            <div class="invalid-feedback">Please enter valid price</div>

        </div>
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
</div>
</div>
